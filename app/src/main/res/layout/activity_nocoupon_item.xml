<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:background="@drawable/coupon"
                                       android:layout_height="match_parent">


    <TextView
        android:id="@+id/no_red3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/no_red2"
        android:layout_below="@+id/no_red2"
        android:layout_marginTop="1px"
        android:textColor="@color/gray_btn_bg_color"
        android:text="限尾号5973可用"/>

    <TextView
        android:id="@+id/no_red4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/no_red3"
        android:layout_below="@+id/no_red3"
        android:layout_marginBottom="40px"
        android:layout_marginTop="1px"        android:textColor="@color/gray_btn_bg_color"
        android:text="2015—10-20到期"/>

    <TextView
        android:id="@+id/no_red2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/no_red1"
        android:layout_below="@+id/no_red1"
        android:layout_marginTop="7dp"        android:textColor="@color/gray_btn_bg_color"
        android:text="满34元可用"/>

    <TextView
        android:id="@+id/no_red1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="分享红包"        android:textColor="@color/gray_btn_bg_color"
        android:textSize="60px"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/no_status"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/no_coupon_money"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="2.7"        android:textColor="@color/gray_btn_bg_color"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="120px"
        android:layout_marginStart="36dp"
        android:layout_alignBaseline="@+id/no_red3"
        android:layout_alignBottom="@+id/no_red3"
        android:layout_alignParentStart="true"/>

    <com.haozhang.lib.SlantedTextView
        android:id="@+id/no_status"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:slantedBackgroundColor="@color/chocolate"
        app:slantedLength="40dp"
        app:slantedMode="right"
        app:slantedText="IOS"
        app:slantedTextColor="@color/gray_btn_bg_color"
        app:slantedTextSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
</com.zhy.autolayout.AutoRelativeLayout>