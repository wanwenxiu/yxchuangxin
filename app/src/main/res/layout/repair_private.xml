<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" 
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="报修项目:"
            android:textSize="@dimen/size_14" />

        <Spinner
            android:id="@+id/private_spinner1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="区域性质:"
            android:textSize="@dimen/size_14" />

        <RadioGroup
            android:id="@+id/quyu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal" >

             <RadioButton
                android:id="@+id/privates"
                android:text="专有区域"
                android:checked="true" />
            <RadioButton
                android:id="@+id/publics"
                android:layout_marginLeft="10dp"
                android:text="共有区域"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/repair_gy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" />

        <RadioGroup
            android:id="@+id/groupPublic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/publicSmall"
                android:text="小修"
                android:checked="true" 
                />

            <RadioButton
                android:id="@+id/privatesBig"
                android:layout_marginLeft="10dp"
                android:text="中大修"
                 />
        </RadioGroup>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/addwarp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" 
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="报修地点:"
            android:textSize="@dimen/size_14" />

        <EditText
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3" 
            android:background="@drawable/banner_border_all"
            android:gravity="left|top"
            android:hint="请输入详细地点"
            android:padding="5dp"
            android:textSize="@dimen/size_15"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="报修详情:"
            android:textSize="@dimen/size_14" />

        <EditText
            android:id="@+id/edContext"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@drawable/banner_border_all"
            android:gravity="left|top"
            android:hint="请输入问题详情，已便于我们更好的处理"
            android:padding="5dp"
            android:textSize="@dimen/size_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center"
            android:text="添加图片:"
            android:textSize="@dimen/size_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="最多只能添加三张图片"
            android:textSize="@dimen/size_12"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center"
            />

        <GridView
            android:id="@+id/noScrollgridview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </GridView>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_selectimg_send"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttom_seletor"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15" />

</LinearLayout>