<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@drawable/coupon"
    >

    <TextView
        android:id="@+id/red3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/red2"
        android:layout_below="@+id/red2"
        android:layout_marginTop="1px"
        android:text="限尾号5973可用"/>

    <TextView
        android:id="@+id/red4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/red3"
        android:layout_below="@+id/red3"
        android:layout_marginBottom="40px"
        android:layout_marginTop="1px"
        android:text="2015—10-20到期"/>

    <TextView
        android:id="@+id/red2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/red1"
        android:layout_below="@+id/red1"
        android:layout_marginTop="7dp"
        android:text="满34元可用"/>

    <TextView
        android:id="@+id/red1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="分享红包"
        android:textSize="60px"
        android:textStyle="normal|bold"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/coupon_money"/>

    <TextView
        android:id="@+id/coupon_money"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="2.7"
        android:textColor="@color/red"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="120px"
        android:layout_above="@+id/red4"
        android:layout_alignParentStart="true"/>

</com.zhy.autolayout.AutoRelativeLayout>