<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <TextView
        android:text="-2.00元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:id="@+id/recharge_money"
        android:layout_above="@+id/recharge_time"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"/>

    <TextView
        android:text="2016-08-08 14:13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recharge_time"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/recharge_pay"
        android:layout_alignStart="@+id/recharge_pay"
        android:textSize="12sp"/>

    <TextView
        android:text="支付宝"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recharge_pay"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>