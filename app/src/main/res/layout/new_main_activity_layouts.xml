<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vswitch="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/main_bg">

    <LinearLayout
        android:id="@+id/main1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4.4" >


           <!-- <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/indexAdvs"
                style="@style/BannerDefaultStyle"
                app:banner_transitionEffect="fade"
                />-->

            <com.yxld.yxchuangxin.view.ImageCycleView
                android:id="@+id/indexAdvs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/transparent" >

                <TextView
                    android:id="@+id/curPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="雅信联动"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18" />

                <ImageView
                    android:id="@+id/mine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:src="@mipmap/message_icon"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/buttomwarp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5.6"
            android:orientation="vertical"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:background="@color/tran_bg"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/tongzhia"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />

                <!--<LinearLayout
                    android:id="@+id/ll_tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"/>-->

                <TextView
                    android:id="@+id/marqueeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"/>
            </LinearLayout>

          <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="你好，尊敬的用户"
                android:textColor="@color/white"
                android:textSize="24sp"
                />

         <!--   <TextView
                android:id="@+id/secondaryActions"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.25"
                android:gravity="center_vertical"
                android:text="二级操作"
                android:textColor="@color/color_7AC356"
                android:textSize="@dimen/size_14"
                />

            <TextView
                android:id="@+id/secondaryActionsDestail"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.25"
                android:layout_marginTop="5dp"
                android:text="文字内容文字内容文字"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14" />-->

            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/secondaryActions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:mvAnimDuration="1000"
                app:mvInterval="3000"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.25"
                android:gravity="center_vertical"
                app:mvTextColor="@color/color_7AC356"
                app:mvTextSize="14sp"
                app:mvSingleLine="true"/>


            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/secondaryActionsDestail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.25"
                android:layout_marginTop="5dp"
                app:mvAnimDuration="1000"
                app:mvInterval="3000"
                app:mvTextColor="@color/white"
                app:mvTextSize="14sp"
                app:mvSingleLine="true"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal"
                android:weightSum="3" >

                <LinearLayout
                    android:id="@+id/wuyeWarp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/new_main1" />

                    <TextView
                        android:id="@+id/test1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="欣物业"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/serviceWarp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/new_main2" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="欣周边"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/goMall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/new_main3" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="欣商城"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>