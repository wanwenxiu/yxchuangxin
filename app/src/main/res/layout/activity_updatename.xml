<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" 
    >

    <TextView
        android:id="@+id/addr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="创欣号只可修改一次，必须为6-16个数字,小写字母和下划线,且不能以cx开始"
        android:textColor="@color/grey"
        android:textSize="@dimen/size_14"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        />

    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="45dp"
      android:background="@drawable/banner_border_bottom"
      android:orientation="horizontal" >

      <TextView
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="4"
          android:gravity="center"
          android:text="创欣号"
          android:textColor="@android:color/black"
          android:textSize="14sp" />

      <EditText
          android:id="@+id/old_name"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_margin="1dp"
          android:layout_weight="1"
          android:background="@android:color/white"
          android:hint=""
          android:paddingLeft="15dp"
          android:maxLength="16"
          android:digits="0123456789abcdefghigklmnopqrstuvwxyz_"
          android:textSize="14sp" >
      </EditText>

      <ImageView
          android:id="@+id/clear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="10dp"
          android:src="@mipmap/mine_update_name_delete" />
  </LinearLayout>

    <TextView
        android:id="@+id/update_name"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttom_seletor"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</LinearLayout>