<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F3EE"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="100dp"
         android:paddingLeft="10dp"
         android:background="@drawable/banner_border_bottom"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="房屋:长沙华菱蓝调国际"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        
        <TextView
            android:id="@+id/qianfei"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="未交款余款:288.88"
            android:textColor="@color/color_9d9d9d"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
    
     <com.yxld.yxchuangxin.view.NoScrollListView
            android:id="@+id/ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/cate_border"
            android:dividerHeight="0dp"
            android:padding="0dp"
            android:scrollbars="none" 
            android:layout_marginTop="10dp"
            />
     
      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white"
         >

        <CheckBox
            android:id="@+id/AllSelect"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:button="@drawable/checkbox_selector"
            android:checked="false"
            />

        <TextView
            android:id="@+id/all_selete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/AllSelect"
            android:gravity="center"
            android:text="全选"
            android:textColor="@color/color_3f3f3f"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
             />
        
        <TextView
            android:id="@+id/priceConnt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/price_connt"
            android:textColor="@color/color_333"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
     <TextView 
         android:layout_width="fill_parent"
         android:layout_height="30dp"
         android:padding="5dp"
         android:text="单笔预交款上限为10000元"
         android:textColor="@color/black"
         android:textSize="@dimen/size_14"
         android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/yhq"
            android:layout_marginBottom="10dp"
            android:background="@drawable/banner_border_bottom"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="65dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"
                android:text="优惠券"
                android:textColor="@color/color_797979"
                android:textSize="@dimen/size_14"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/yhje"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="¥0.00"
                android:textSize="13sp"
                android:textColor="@color/red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:src="@mipmap/mine_right_arrows"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@color/cccccc"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:text="选择支付方式:"
            android:textColor="#777777"
            android:textSize="13sp" />

        <!-- 支付宝支付 -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/banner_border_bottom"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/balanceicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/balance_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/balanceicon"
                android:text="余额"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/checkBoxbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/categort_class_checkbox_selector"
                android:checked="true" />
        </RelativeLayout>

        <!-- 支付宝支付 -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/banner_border_bottom"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/alipayicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/alipay_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/alipayicon"
                android:text="支付宝"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/checkBoxAliPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/categort_class_checkbox_selector"
                />
        </RelativeLayout>

        <!-- 微信 -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/banner_border_bottom"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/weixinicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/weixin_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/weixinicon"
                android:text="微信"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/checkBoxWeiXin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/categort_class_checkbox_selector" />
        </RelativeLayout>
     <RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/size_20"
         >
         
      <TextView
            android:id="@+id/sure"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#383838"
            android:gravity="center"
            android:text="提交账单"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
             />
     </RelativeLayout>
    </LinearLayout>
</ScrollView>
